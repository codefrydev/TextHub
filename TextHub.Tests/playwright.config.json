{
  "testDir": ".",
  "testMatch": "**/*.cs",
  "timeout": 60000,
  "retries": 1,
  "workers": 1,
  "use": {
    "baseURL": "https://localhost:5001",
    "headless": false,
    "viewport": { "width": 1920, "height": 1080 },
    "ignoreHTTPSErrors": true,
    "trace": "on-first-retry",
    "video": "retain-on-failure",
    "screenshot": "only-on-failure",
    "launchOptions": {
      "headless": false,
      "slowMo": 200,
      "args": [
        "--start-maximized",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    }
  },
  "projects": [
    {
      "name": "chromium",
      "use": { 
        "browserName": "chromium",
        "headless": false,
        "launchOptions": {
          "headless": false,
          "slowMo": 200,
          "args": [
            "--start-maximized",
            "--disable-web-security",
            "--disable-features=VizDisplayCompositor"
          ]
        }
      }
    },
    {
      "name": "firefox",
      "use": { 
        "browserName": "firefox",
        "headless": false,
        "launchOptions": {
          "headless": false,
          "slowMo": 200
        }
      }
    },
    {
      "name": "webkit",
      "use": { 
        "browserName": "webkit",
        "headless": false,
        "launchOptions": {
          "headless": false,
          "slowMo": 200
        }
      }
    }
  ]
}
