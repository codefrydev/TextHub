{
  "testDir": ".",
  "testMatch": "**/*.cs",
  "timeout": 30000,
  "retries": 1,
  "workers": 1,
  "use": {
    "baseURL": "http://localhost:5099",
    "headless": false,
    "viewport": { "width": 1920, "height": 1080 },
    "launchOptions": {
      "headless": false,
      "slowMo": 1000,
      "executablePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "args": [
        "--start-maximized",
        "--no-sandbox",
        "--disable-web-security",
        "--new-window",
        "--force-new-window"
      ]
    }
  },
  "projects": [
    {
      "name": "chrome",
      "use": { 
        "browserName": "chromium",
        "headless": false,
        "launchOptions": {
          "headless": false,
          "slowMo": 1000,
          "executablePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
          "args": [
            "--start-maximized",
            "--no-sandbox",
            "--disable-web-security",
            "--new-window",
            "--force-new-window"
          ]
        }
      }
    }
  ]
}