@page "/title-case"
@using TextHub.Services.Converters
@using TextHub.Components.Forms
@inject TextCaseConverterService ConverterService

<TextCaseLayout 
    PageTitle="Title Case Converter"
    ToolName="Title Case Converter"
    Description="Capitalize First Letter Of Each Word"
    ConvertButtonText="Convert to Title Case"
    UseCaseDescription="Perfect for headings, titles, and proper formatting"
    Route="/title-case"
    ConvertFunction="@(input => ConverterService.ConvertToTitleCase(input))">
    
    <IconSvg>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-case-sensitive w-6 h-6 sm:w-8 sm:h-8 text-primary">
            <path d="m3 15 4-8 4 8"></path>
            <path d="M4 13h6"></path>
            <circle cx="18" cy="12" r="3"></circle>
            <path d="M21 9v6"></path>
        </svg>
    </IconSvg>
</TextCaseLayout>
