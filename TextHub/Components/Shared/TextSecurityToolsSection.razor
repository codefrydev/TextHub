@using TextHub.Services.Data
@inject ToolDataService ToolDataService

<section class="py-16 md:py-24 px-4">
    <div class="container mx-auto max-w-7xl">
        <div class="mb-16 md:mb-20 animate-fade-in" style="animation-delay: 600ms;">
            <SectionHeader Title="Text Security Tools" Description="Encrypt, secure, and protect your text data" Icon="@_securityIcon" />
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                @foreach (var (tool, index) in _availableTextSecurityTools.Select((t, i) => (t, i)))
                {
                    <ToolCardComponent Tool="tool" AnimationDelay="@(600 + index * 100)" />
                }
            </div>
        </div>
    </div>
</section>

@code {
    private List<TextHub.Models.Tool> _availableTextSecurityTools = new();
    private readonly string _securityIcon = "<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"24\" height=\"24\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"2\" stroke-linecap=\"round\" stroke-linejoin=\"round\" class=\"w-6 h-6 text-primary\"><path d=\"M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z\"></path></svg>";

    protected override void OnInitialized()
    {
        _availableTextSecurityTools = ToolDataService.GetTextSecurityTools();
    }
}
