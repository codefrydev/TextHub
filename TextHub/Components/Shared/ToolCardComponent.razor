@if (Tool.IsComingSoon)
{
    <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6 relative opacity-60 border-dashed animate-fade-in" style="animation-delay: @(AnimationDelay)ms;">
        <div class="absolute top-3 right-3 px-2 py-1 bg-muted rounded text-xs text-muted-foreground">Coming Soon</div>
        <div class="flex flex-col sm:flex-row items-start gap-3 sm:gap-4 mb-4">
            <div class="p-2.5 sm:p-3 bg-background/80 rounded-lg">
                @((MarkupString)Tool.Icon)
            </div>
            <div class="flex-1">
                <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2 text-muted-foreground">@Tool.Title</h3>
                <p class="text-sm sm:text-base text-muted-foreground/80">@Tool.Description</p>
            </div>
        </div>
    </div>
}
else
{
    <a class="group tool-card relative overflow-hidden animate-fade-in" href="@Tool.Href" style="animation-delay: @(AnimationDelay)ms;">
        <div class="absolute inset-0 @GetGradientClass() opacity-50 group-hover:opacity-70 transition-opacity"></div>
        <div class="relative z-10">
            <div class="flex flex-col sm:flex-row items-start gap-3 sm:gap-4 mb-4">
                <div class="p-2.5 sm:p-3 bg-background/80 rounded-lg group-hover:animate-glow-pulse">
                    @((MarkupString)Tool.Icon)
                </div>
                <div class="flex-1">
                    <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2 group-hover:text-primary transition-colors">@Tool.Title</h3>
                    <p class="text-sm sm:text-base text-muted-foreground">@Tool.Description</p>
                </div>
            </div>
            <div class="flex items-center text-primary font-medium text-sm sm:text-base">
                Try it now
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right w-3 h-3 sm:w-4 sm:h-4 ml-2 group-hover:translate-x-1 transition-transform">
                    <path d="M5 12h14"></path>
                    <path d="m12 5 7 7-7 7"></path>
                </svg>
            </div>
        </div>
    </a>
}